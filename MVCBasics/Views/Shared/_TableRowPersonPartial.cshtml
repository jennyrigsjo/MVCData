@model Person

<div class="row person">
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">@Model.Name</div>
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">@Model.Phone</div>
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">@Model.City</div>
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
        <a class="delete" asp-controller="People" asp-action="DeletePerson" asp-route-name="@Model.Name">Delete</a>
    </div>
</div>

